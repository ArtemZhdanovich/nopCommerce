@model ConfigureViewModel

@using Nop.Plugin.Misc.PolyCommerce.Models

@{
    Layout = "_AdminLayout";
}

<iframe id="poly-frame" style="width: 100%; border: none" src="@(Model.PolyCommerceBaseUrl)/account/login?token=@(Model.UserToken)"></iframe>

<script>

    $(document).ready(function () {

        (function () {
            orig = $.fn.css;
            $.fn.css = function () {
                var result = orig.apply(this, arguments);
                $(this).trigger('stylechanged');
                return result;
            }
        })();

        function handleResize() {
            setTimeout(function () {
                var height = parseInt($(".content-wrapper").css("min-height"));
                $("#poly-frame").height(height - 5);
            }, 0);
        }

        handleResize();

        // resize iframe when content-wrapper changes height
        $(".content-wrapper").on('stylechanged', function () {
            handleResize();
        });

    });
</script>

