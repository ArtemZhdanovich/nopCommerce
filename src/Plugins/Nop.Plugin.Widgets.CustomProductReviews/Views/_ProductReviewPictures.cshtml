@model List<PictureModel>
@using Nop.Web.Models.Media

@if (Model.Count > 0)
{

    <div class="picture-thumbs" id="main-review-img">
            @foreach (var picture in Model)
            {
            <div class="thumb-item" style="max-height: 150px;max-width:150px">
                <a href="@picture.FullSizeImageUrl" target="_blank">
                    <img style="object-fit: contain" src="@picture.ImageUrl" alt="@picture.AlternateText" title="@picture.Title" data-defaultsize="@picture.ImageUrl" data-fullsize="@picture.FullSizeImageUrl" />
                </a>
                </div>
            }
    </div>
    <script asp-location="Footer">
            $(document).ready(function() {
                $('.thumb-item img').on('click',
                    function() {
                        $('#main-review-img').attr('src', $(this).attr('data-defaultsize'));
                    $('#main-review-img').attr('title', $(this).attr('title'));
                    $('#main-review-img').attr('alt', $(this).attr('alt'));
                    $('#main-review-img-lightbox-anchor')
                            .attr('href', $(this).attr('data-fullsize'));
                    $('#main-review-img-lightbox-anchor').attr('title', $(this).attr('title'));
                    });
            });
        </script>
    

}
