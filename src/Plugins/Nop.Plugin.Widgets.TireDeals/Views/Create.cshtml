@{
    Layout = "_AdminLayout";
}

@model Nop.Plugin.Widgets.Deals.Models.TireDealModel

@{
    const string hideSearchBlockAttributeName = "DiscountsPage.HideSearchBlock";
    var hideSearchBlock = false;
}


<form asp-controller="TireDeals" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Common.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List" asp-controller="TireDeals">@T("Common.Back")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    
    <div class="content-header form-horizontal">
        <div class="cards-group">
            <div class="card card-default card-search">
                <div class="card-body">
                    <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                        <div class="search-text"> @("Create") </div>
                        <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                        <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                    </div>
    
    
                    <div class="search-body @(hideSearchBlock ? "closed" : "")">
    
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="IsActive" />
                                    </div>
                                    <div class="col-md-8">
                                        <input type="checkbox" value="true" checked name="IsActive"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="Title" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="Title" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="ShortDescription" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="ShortDescription" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="LongDescription" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="LongDescription" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-default">
                <div class="card-header">
                    Background Image
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="BackgroundPictureId_OverrideForStore" asp-input="BackgroundPictureId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="BackgroundPictureId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="BackgroundPictureId" />
                            <span asp-validation-for="BackgroundPictureId"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card card-default">
                <div class="card-header">
                    Brand Logo
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="BrandPictureId_OverrideForStore" asp-input="BrandPictureId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="BrandPictureId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="BrandPictureId" />
                            <span asp-validation-for="BrandPictureId"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>