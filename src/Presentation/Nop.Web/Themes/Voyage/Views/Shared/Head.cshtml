@using Nop.Core

@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/1260.rtl.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/mobile.rtl.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/1260.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/mobile.css");
        Html.AppendCssFileParts("~/Themes/Voyage/Content/css/styles.css");
    }

    Html.AppendCssFileParts("~/Themes/Voyage/css/custom.css");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.min.js");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Voyage/Content/scripts/voyage.js");
}