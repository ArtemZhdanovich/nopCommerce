@inject IThemeContext themeContext

@{
    var themeName = await themeContext.GetWorkingThemeNameAsync();

    //add main CSS file
    if (await Html.ShouldUseRtlThemeAsync(themeName))
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.rtl.css?v=1.0");
    }
    else
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css?v=1.0");
    }

    //add jQuery UI css file
    Html.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");
}