@model EmployeePersonalDetailModel

<input asp-for="Id" type="hidden" />


<div class="form-group row">
    <div class="col-md-3">
        <nop-label asp-for="BloodTypeId" />
    </div>
    <div class="col-md-9">
        <nop-select asp-for="BloodTypeId" asp-items="Model.AvailableBloodTypeCategories"  />
        <span asp-validation-for="BloodTypeId"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">
        <nop-label asp-for="MaritalStatusId" />
    </div>
    <div class="col-md-9">
        <nop-select asp-for="MaritalStatusId" asp-items="Model.AvailableMaritalStatusCategories" />
        <span asp-validation-for="MaritalStatusId"></span>
    </div>
</div>

<nop-alert asp-alert-id="statesAlert" asp-alert-message="@T("Admin.Common.Alert.PersonalDetail.Failed")" />