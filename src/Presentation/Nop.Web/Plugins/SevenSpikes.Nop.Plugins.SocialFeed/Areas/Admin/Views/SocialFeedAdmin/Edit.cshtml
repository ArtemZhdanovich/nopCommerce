@model SocialFeedModel
@{
    Layout = AdminViewLocations.AdminLayoutViewPath;
    
    NopHtml.SetActiveMenuItemSystemName("SevenSpikes.SocialFeed.Admin.Submenus.SocialFeed");
}

<form method="post">

    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("SevenSpikes.Plugins.SocialFeed.Admin.SocialFeed.EditDetails")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("SevenSpikes.Plugins.SocialFeed.Admin.SocialFeed.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-primary save-settings-button">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-primary save-settings-button">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @if (Model.Id > 0)
            {
                <span id="social-feed-delete" class="btn bg-danger">
                    <i class="far fa-trash-alt"></i>
                    @T("Admin.Common.Delete")
                </span>
            }
        </div>
    </div>

    @{ await Html.RenderPartialAsync(AdminViews.SocialFeedCreateOrUpdate, Model); }
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="social-feed-delete" />