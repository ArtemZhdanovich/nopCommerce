@model AvenueThemeSettingsModel

<input type="hidden" id="avenueSettingIds" 
       data-featuredCategoriesColorInput1="@Html.IdFor(x => x.FeaturedCategoriesColor1)" 
       data-featuredCategoriesColorInput2="@Html.IdFor(x => x.FeaturedCategoriesColor2)" 
       data-featuredCategoriesColorInput3="@Html.IdFor(x => x.FeaturedCategoriesColor3)"
       data-featuredCategoriesColor1="#featuredCategoriesColorPicker1" 
       data-featuredCategoriesColor2="#featuredCategoriesColorPicker2" 
       data-featuredCategoriesColor3="#featuredCategoriesColorPicker3" />

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            @T("SevenSpikes.Themes.Avenue.Admin.PanelTitle.GlobalSettings")
        </div>
        <div class="panel-body">
            <div class="form-group theme-color">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="Preset_OverrideForStore" asp-input="Preset" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="Preset" />
                </div>
                <div class="col-md-9 adminData">
                    @Html.NopRadioButtonsForPresets(Model.Presets, Model.Preset)
                </div>
            </div>
            <div class="form-group logo-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="LogoImageId_OverrideForStore" asp-input="LogoImageId" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="LogoImageId" />
                </div>
                <div class="col-md-9">
                    <div id="logo-image">
                        <nop-editor asp-for="LogoImageId" />
                        <span asp-validation-for="LogoImageId"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="HomePageLayout_OverrideForStore" asp-input="HomePageLayout" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="HomePageLayout" />
                </div>
                <div class="col-md-9">
                    <nop-select asp-for="HomePageLayout" asp-items="Model.HomePageLayoutList" />
                </div>
            </div>
