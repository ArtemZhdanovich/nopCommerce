                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="FeaturedCategoriesColor1" />
                    <input id="featuredCategoriesColorPicker1" />
                    <span class="btn bg-blue open-button" style="display:none;">@T("SevenSpikes.Themes.Avenue.Admin.Settings.GeneralSettings.SelectColorButton")</span>
                    <span class="k-select close-select" style="display:none;">
                        <span class="k-icon k-i-close" unselectable="on"></span>
                    </span>
                </div>
            </div>
            <div class="form-group color-picker" style="display:none">
                <div class="col-md-3">
