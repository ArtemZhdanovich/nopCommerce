                        <span class="k-icon k-i-close" unselectable="on"></span>
                    </span>
                </div>
            </div>
            <div class="form-group color-picker" style="display:none">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="FeaturedCategoriesColor3_OverrideForStore" asp-input="FeaturedCategoriesColor3" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="FeaturedCategoriesColor3" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="FeaturedCategoriesColor3" />
                    <input id="featuredCategoriesColorPicker3" />
                    <span class="btn bg-blue open-button" style="display:none;">@T("SevenSpikes.Themes.Avenue.Admin.Settings.GeneralSettings.SelectColorButton")</span>
                    <span class="k-select close-select" style="display:none;">
                        <span class="k-icon k-i-close" unselectable="on"></span>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="SmartCategoriesLayout_OverrideForStore" asp-input="SmartCategoriesLayout" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
