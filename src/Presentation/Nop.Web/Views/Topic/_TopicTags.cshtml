@model IList<TopicTagModel>

@using Nop.Core.Domain.Catalog

@if (Model.Count > 0)
{
	<div class="topic-tags-box">
		<div class="title">
			<strong>@T("Topic.Tags")</strong>
		</div>
		<div class="topic-tags-list">
			<ul>
				@for (var i = 0; i < Model.Count; i++)
				{
					<li class="tag">
						<a href="@(Url.RouteUrl<TopicTag>(new { SeName = Model[i].SeName }))" class="topictag">
							@Model[i].Name
						</a> <span>@T("Topic.Tags.Count", Model[i].TopicCount)</span>
						
					</li>
					@if (i != Model.Count - 1)
					{
						<li class="separator">,</li>
					}
				}
			</ul>
		</div>
	</div>
}
else
{
	<p>No tags available for this topic.</p>
}
